<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="150dp" android:layout_height="wrap_content"
	android:background="@drawable/menu_element_background">

	<ImageView android:layout_width="wrap_content" android:id="@+id/ivMenuImage"
		android:layout_height="wrap_content" android:layout_marginLeft="5dp"
		android:layout_gravity="center_vertical" />

	<TextView android:text="Name" android:id="@+id/tvMenuName"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="20dp" android:textColor="#000000"
		android:layout_gravity="center_vertical"></TextView>

</LinearLayout>
