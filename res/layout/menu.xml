<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:background="#f0f0f0">

	<include android:layout_width="fill_parent" layout="@layout/search_bar" />

	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ViewFlipper android:id="@+id/viewFlipper"
			android:layout_width="fill_parent" android:layout_height="fill_parent">

			<ImageView android:src="@drawable/dragon1" android:id="@+id/ivDragon"
				android:layout_height="fill_parent" android:layout_width="fill_parent"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true" android:scaleType="matrix" />

			<ImageView android:src="@drawable/dragon2" android:id="@+id/ivDragon"
				android:layout_height="fill_parent" android:layout_width="fill_parent"
				android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true" android:scaleType="matrix" />

		</ViewFlipper>

		<ImageView android:src="@drawable/bugdroid" android:id="@+id/ivBugdroid"
			android:layout_height="fill_parent" android:layout_width="120dp"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true" android:layout_marginBottom="360dp" />

		<ListView android:layout_width="155dp" android:id="@+id/llMenu"
			android:cacheColorHint="#00000000" android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true" android:layout_marginRight="5dp"
			android:layout_marginBottom="105dp"></ListView>
		
		<ImageView android:id="@+id/ivInfo"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@android:drawable/ic_menu_info_details"
			android:layout_alignParentBottom="true" android:layout_alignParentRight="true"></ImageView>

	</RelativeLayout>

</LinearLayout>